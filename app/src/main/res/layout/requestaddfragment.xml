<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/RequestAddFragment"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginRight="15dp"
    android:orientation="vertical">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:id="@+id/RequestFragment"
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:orientation="vertical">

            <TextView
                android:id="@+id/textView11"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_marginTop="10dp"
                android:gravity="bottom"
                android:text="Kon"
                android:textAlignment="center"
                android:textSize="20sp" />

            <AutoCompleteTextView
                android:id="@+id/AutoTextKon"
                style="@style/Widget.AppCompat.AutoCompleteTextView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColorLink="@color/colorPrimary" />

            <View
                android:layout_width="match_parent"
                android:layout_height="2dp"
                android:background="@android:color/holo_blue_dark" />

            <TextView
                android:id="@+id/textView7"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_marginTop="10dp"
                android:gravity="bottom"
                android:text="Weterynarz"
                android:textAlignment="center"
                android:textSize="20sp" />

            <AutoCompleteTextView
                android:id="@+id/VetTextComplex"
                style="@style/Widget.AppCompat.AutoCompleteTextView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColorLink="@color/colorPrimary" />

            <View
                android:layout_width="match_parent"
                android:layout_height="2dp"
                android:background="@android:color/holo_blue_dark" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="0.26"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/InjuryId"
                    android:layout_width="123dp"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:text="Lokalizacja uszczerbku"
                    android:textAlignment="textStart" />

                <EditText
                    android:id="@+id/Injuryrequest_edit"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:ems="10"
                    android:inputType="text" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="0.26"
                android:orientation="horizontal">

                <TextView

                    android:id="@+id/Prioirty"
                    android:layout_width="122dp"
                    android:layout_height="49dp"
                    android:gravity="center"
                    android:text="Piorytet"
                    android:textAlignment="textStart" />

                <Spinner
                    android:id="@+id/priority_spinnerLay"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="left" />

            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="2dp"
                android:layout_marginTop="10dp"
                android:background="@android:color/holo_blue_dark" />

            <TextView
                android:id="@+id/Description"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_marginTop="10dp"
                android:text="Description"
                android:textAlignment="center"
                android:textSize="20sp" />

            <EditText
                android:id="@+id/description_edit"
                android:layout_width="match_parent"
                android:layout_height="200dp"
                android:autoText="false"
                android:background="?android:attr/colorLongPressedHighlight"
                android:ems="10"
                android:gravity="top"
                android:inputType="textMultiLine"
                android:singleLine="false" />

            <View
                android:layout_width="match_parent"
                android:layout_height="2dp"
                android:layout_gravity="center"
                android:layout_marginTop="10dp"
                android:background="@android:color/holo_blue_dark" />

            <Button
                android:id="@+id/addRequest_button"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_marginTop="30dp"
                android:text="Add vet request" />

        </LinearLayout>
    </ScrollView>

</LinearLayout>